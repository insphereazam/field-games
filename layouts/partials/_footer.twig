{% set menuItems = _Menu.get({menuType: 'footer'}) %}
<footer class="footer">
    <div class="footer__container">
        <div class="footer__info">
            <a href="/" class="footer__logo"></a>
            <div class="footer__copyright">Copyright Field & Game 2015</div>
        </div>
        <div class="footer__navigation">
            <div class="footer__navigation--col-half">
                <h1 class="footer__heading">Sitemap</h1>
                <ul class="footer__navigation--col-1 footer__navigation--small">
                    {% for i in 0..4 %}
                        {% if menuItems[i] is defined %}
                            {% set menuItem = menuItems[i] %}
                            <li class="footer__navigation-item">
                                <a href="{{menuItem.link}}" class="footer__navigation-link footer__navigation-link--small">
                                    {{ ((menuItem.label is empty) ? ((menuItem.pageTitle is empty)? menuItem.blogTitle : menuItem.pageTitle) : menuItem.label )}}
                                </a>
                            </li>
                        {% endif %}
                    {% endfor %}
                </ul>
                {% if menuItems[5] is defined%}
                    <ul class="footer__navigation--col-2 footer__navigation--small">
                        {% for i in 5..(menuItems | length - 1) %}
                            {% if menuItems[i] is defined %}
                                {% set menuItem = menuItems[i] %}
                                <li class="footer__navigation-item">
                                    <a href="{{menuItem.link}}" class="footer__navigation-link footer__navigation-link--small">
                                    {{ ((menuItem.label is empty) ? ((menuItem.pageTitle is empty)? menuItem.blogTitle : menuItem.pageTitle) : menuItem.label )}}
                                    </a>
                                </li>
                            {% endif %}
                        {% endfor %}
                    </ul>
                {% endif %}
            </div>
            {% set blogSettings = _Blog.getHomeBlogSettings() %}
            <div class="footer__navigation--col-half">
                <div class="footer__navigation--col-3 footer__navigation--small">
                    <h1 class="footer__heading">Contact</h1>
                    <p class="footer__text">
                        {{blogSettings.contact['address']}} <br>
                        {{blogSettings.contact['city']}}, {{blogSettings.contact['state']}}, {{blogSettings.contact['country']}}<br>
                        <br>
                        Phone no. {{blogSettings.contact['phone']}}<br>
                        Email. {{blogSettings.contact['email']}}
                    </p>
                </div>
                {% set menuSocialLinks = _Menu.getSocialLinks() %}
                <div class="footer__navigation--col-4 footer__navigation--small">
                    <h1 class="footer__heading">Connect with us</h1>
                    <div class="footer__social">
                        {% if menuSocialLinks['facebook'] is defined %}
                            <a href="{{menuSocialLinks['facebook']}}" class="footer__social-link footer__social-link--facebook"></a>
                        {% endif %}
                        {% if menuSocialLinks['twitter'] is defined %}
                            <a href="{{menuSocialLinks['twitter']}}" class="footer__social-link footer__social-link--twitter"></a>
                        {% endif %}
                        {% if menuSocialLinks['google'] is defined %}
                            <a href="{{menuSocialLinks['google']}}" class="footer__social-link footer__social-link--google-plus"></a>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>
</footer>